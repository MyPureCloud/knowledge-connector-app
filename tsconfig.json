{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "strictFunctionTypes": true,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
